class Solution {
    public int connectSticks(int[] sticks) {
        
        if(sticks.length == 0){
            return 0;
        }
        
        
        PriorityQueue<Integer> pq = new PriorityQueue<>((a,b) -> a-b);
        
        for(int stick : sticks){
            pq.add(stick);
        }
        
        List<Integer> list = new ArrayList<>();
        
        while(pq.size()> 1){
            int first = pq.poll();
            int second = pq.poll();
            
            first += second;
            list.add(first);
            
            pq.add(first);
        }
        
        int output = 0;
        for(int item: list){
            output += item;
        }
        
        
        return output;
    }
}
